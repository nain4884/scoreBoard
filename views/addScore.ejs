<style>
  form {
    background-color: rgb(248, 200, 81) !important;
  }

  .add-match-container {
    max-width: 97%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .exchange-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin-top: 20px;
  }

  .heading-cont {
    display: flex;
    justify-content: space-between;
  }

  @media screen and (max-width: 768px) {
    .add-match-container {
      max-width: 100%;
      position: relative;
      top: 0%;
      left: 0%;
      transform: translate(0%, 0%);
    }
  }
</style>

<div class="container add-match-container">
  <div class="row">
    <div class="col-md-12 card p-3">
      <div class="heading-cont">
        <h5>Add Score (<%=data.title%>)</h5>
        <p>
          currentInning: <span id="inning"><%=data.currentInning%></span>
        </p>
      </div>
      <form class="card p-3 mt-3 was-validated">
        <div class="row">
          <div class="form-group col-md-3">
            <label for="batsmanStrike">Batsman strike:</label>
            <input type="text" class="form-control" id="batsmanStrike" placeholder="Enter Batsman name on strike">
          </div>
          <div class="form-group col-md-1 exchange-icon">
            <button class="btn btn-primary" id="exchange" title="Change strike">
              <i class="bi bi-arrow-left-right"></i> <!-- Bootstrap exchange icon class -->
            </button>
          </div>
          <div class="form-group col-md-3">
            <label for="batsmanNonStrike">Batsman non-strike:</label>
            <input type="text" class="form-control" id="batsmanNonStrike" placeholder="Enter Batsman name on non-strike">
          </div>
          <div class="form-group col-md-5">
            <label for="bowler">Bowler:</label>
            <input type="text" class="form-control" id="bowler" placeholder="Enter Bowler name">
          </div>
          <div class="form-group col-md-3">
            <label for="bowlerType">Bowlwr Type:</label>
            <select class="form-control" id="bowlerType" required>
              <option value="">Select bowler type</option>
              <option value="spinner">Spinner</option>
              <option value="pacer">Pacer</option>
              <option value="swing">Swing</option>

            </select>
          </div>
          <div class="form-group col-md-3">
            <button id="changeInning">
              Change Inning
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  const currentInning = "<%= data?.currentInning %>";
</script>
<script src="/js/addScore.js"></script>