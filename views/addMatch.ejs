<style>
    form {
        background-color: rgb(248, 200, 81) !important;
    }

    .add-match-container {
        max-width: 97%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<div class="container add-match-container">
    <div class="row">
        <div class="col-md-12 card p-3">
            <h5>Add Match</h5>
            <form action="/action_page.php" method="post" class="card p-3 mt-3">
                <div class="row">
                    <div class="form-group col-md-2">
                        <label for="gameType">Game</label>
                        <select class="form-control" id="gameType">
                            <% if (gameType.length === 0) { %>
                                <option value="0">No Game Type</option>
                            <% } else { %>
                                <option value="0">Select game type</option>

                                <% gameType.forEach((item) => { %>
                                    <option value="<%= item.id %>"><%= item.name %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="tournament">Tournament Name</label>
                        <select class="form-control" id="tournament">
                            <option value="0">No Tournament Found</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="matchName">Match Name</label>
                        <select class="form-control" id="matchName">
                            <option value="1">FIFA World Cup</option>
                            <option value="2">Indian Premier League</option>
                            <option value="3">Australian Open</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="teamA">Team A:</label>
                        <input disabled type="text" class="form-control" id="teamA" placeholder="Enter team A name">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="teamB">Team B:</label>
                        <input disabled type="text" class="form-control" id="teamB" placeholder="Enter team B name">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="teamC">Team C:</label>
                        <input disabled type="text" class="form-control" id="teamC" placeholder="Enter team B name">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="startTime">Start Time:</label>
                        <input disabled type="datetime-local" class="form-control" id="startTime"
                            placeholder="Enter start time">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="overBall">Over Ball</label>
                        <select class="form-control" id="overBall">
                            <option value="1">5 over ball</option>
                            <option value="2">6 over ball</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="noBall">No Ball Run</label>
                        <select class="form-control" id="noBall">
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add Match</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/addMatch.js"></script>